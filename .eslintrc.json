{
    "env": {
        "commonjs": true,
        "node": true,
        "browser": true,
        "es6": true,
        "amd": true
    },
    "globals": {
        "module": true,
        "$": true,
        "WdatePicker": true,
        "JustGage" : true
    },
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false
    },
    "rules": {
        //*************  Possible Errors **************//
        //禁止条件表达式中出现赋值操作符
        "no-cond-assign": "error",
        //禁止使用除了console.error与console.warn以外的console函数
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        //禁止在除了循环条件外的条件中使用常量表达式
        "no-constant-condition": [
            "error",
            {
                "checkLoops": false
            }
        ],
        //禁止在正则表达式中出现ASCII控制字符
        "no-control-regex": "error",
        //禁用debugger
        "no-debugger": "error",
        //禁止 function 定义中出现重名参数
        "no-dupe-args": "error",
        //禁止对象字面量中出现重复的 key
        "no-dupe-keys": "error",
        //禁止出现重复的 case 标签
        "no-duplicate-case": "error",
        //禁止在正则表达式中使用空字符集
        "no-empty-character-class": "error",
        //禁止出现空语句块
        "no-empty": "error",
        //禁止对 catch 子句的参数重新赋值
        "no-ex-assign": "error",
        //禁止不必要的布尔类型转换
        "no-extra-boolean-cast": "warn",
        //禁止不必要的分号
        "no-extra-semi": "warn",
        //禁止对function声明重新赋值
        "no-func-assign": "error",
        //禁止在嵌套的块中出现function 声明
        "no-inner-declarations": [
            "error",
            "functions"
        ],
        //禁止无效的正则表达式
        "no-invalid-regexp": "error",
        //禁止不规则的空白
        "no-irregular-whitespace": "warn",
        //禁止将全局对象当作函数进行调用
        "no-obj-calls": "error",
        //禁止正则表达式字面量中出现多个空格
        "no-regex-spaces": "error",
        //禁用稀疏数组
        "no-sparse-arrays": "error",
        //禁止在除了用``包裹的字符串外使用模板字符串
        "no-template-curly-in-string": "warn",
        //禁止出现令人困惑的多行表达式
        "no-unexpected-multiline": "warn",
        //禁止在 return、throw、continue 和 break 语句后出现不可达代码
        "no-unreachable": "warn",
        //禁止在 finally 语句块中出现控制流语句
        "no-unsafe-finally": "error",
        //禁止出现模棱两可的!运算符
        "no-unsafe-negation": "error",
        //要求使用 isNaN() 检查 NaN
        "use-isnan": "error",
        //*************  Best Practices **************//
        //强制把变量的使用限制在其定义的作用域范围内
        "block-scoped-var": "warn",
        //强制所有控制语句使用一致的括号风格
        "curly": "warn",
        //要求 switch 语句中有 default 分支
        "default-case": "warn",
        //强制在点号之前换行
        "dot-location": [
            "warn",
            "property"
        ],
        //要求尽可能使用点号访问属性
        "dot-notation": [
            "warn",
            {
                "allowPattern": "^[a-z]+(_[a-z]+)+$"
            }
        ],
        //尽可能使用===和!==
        //        "eqeqeq": [
        //            "warn",
        //            "smart"
        //        ],
        //使用hasOwnProperty约束 for-in
        "guard-for-in": "warn",
        //禁用alert
        "no-alert": "error",
        //禁用 caller 或 callee
        "no-caller": "error",
        //不允许在 case 子句中使用词法声明
        "no-case-declarations": "error",
        //禁止使用看起来像除法的正则表达式
        "no-div-regex": "error",
        //禁止在 else 前有 return
        "no-else-return": "warn",
        //禁止出现空函数
        "no-empty-function": "error",
        //禁用 eval()
        "no-eval": "error",
        //禁止使用空解构模式
        "no-empty-pattern": "error",
        //禁止使用双等号与 null 进行比较
        "no-eq-null": "warn",
        //禁止扩展原生对象
        "no-extend-native": [
            "warn",
            {
                "exceptions": [
                    "Array"
                ]
            }
        ],
        //禁止不必要的标签
        "no-extra-label": "error",
        //禁止 case 语句落空
        "no-fallthrough": "error",
        //禁止可能引起困惑的浮点小数
        "no-floating-decimal": "warn",
        //禁用隐式的eval()
        "no-implied-eval": "error",
        //禁用迭代器
        "no-iterator": "error",
        //禁止不必要的嵌套块
        "no-lone-blocks": "error",
        //禁止循环中存在函数
        "no-loop-func": "error",
        //禁止出现多个空格
        "no-multi-spaces": "warn",
        //禁止使用斜线创建多行字符串
        "no-multi-str": "error",
        //禁用Function构造函数
        "no-new-func": "error",
        //禁止原始包装实例
        "no-new-wrappers": "error",
        //禁止在字符串字面量中使用八进制转义序列
        "no-octal-escape": "warn",
        //禁用八进制字面量
        "no-octal": "error",
        //禁止对函数参数再赋值
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        //禁用__proto__
        "no-proto": "error",
        //禁止多次声明同一变量
        "no-redeclare": "error",
        //禁止在返回语句中赋值
        "no-return-assign": "error",
        //禁用 Script URL
        "no-script-url": "error",
        //禁止自我赋值
        "no-self-assign": "error",
        //禁止自身比较
        "no-self-compare": "error",
        //不允许使用逗号操作符
        "no-sequences": "error",
        //限制可以被抛出的异常
        "no-throw-literal": "error",
        //禁用一成不变的循环条件
        "no-unmodified-loop-condition": "error",
        //禁用未使用过的标签
        "no-unused-labels": "warn",
        //禁用不必要的 .call() 和 .apply()
        "no-useless-call": "error",
        //禁止没有必要的字符拼接
        "no-useless-concat": "warn",
        //禁用不必要的转义
        "no-useless-escape": "warn",
        //禁用多余的return语句
        "no-useless-return": "warn",
        //禁用 with 语句
        "no-with": "error",
        //*************  Variables **************//
        //不允许在 catch 语句中遮盖变量
        "no-catch-shadow": "error",
        //禁止删除变量
        "no-delete-var": "error",
        //外部作用域中的变量不能与它所包含的作用域中的变量或参数同名
        "no-shadow": "error",
        //不允许初始化变量值为 undefined
        "no-undef-init": "error",
        //禁用未声明的变量
        "no-undef": "error",
        //不允许使用undefined作为变量名
        "no-undefined": "error",
        //禁止未使用过的变量
        "no-unused-vars": "warn",
        //************* ES6 **************//
        //要求箭头函数体使用大括号
        "arrow-body-style": [
            "warn",
            "as-needed"
        ],
        //要求箭头函数的参数使用圆括号
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        //强制箭头函数的箭头前后添加一个空格
        "arrow-spacing": [
            "warn",
            {
                "before": true,
                "after": true
            }
        ],
        //验证构造函数中 super() 的调用
        "constructor-super": "warn",
        //禁止修改类声明的变量
        "no-class-assign": "error",
        //禁止修改 const 声明的变量
        "no-const-assign": "error",
        //禁止类成员中出现重复的名称
        "no-dupe-class-members": "error",
        //disallow new operators with the Symbol object
        "no-new-symbol": "error",
        //禁止同一import在多行重复出现
        "no-duplicate-imports": "warn",
        //在构造函数中禁止在调用super()之前使用this或super
        "no-this-before-super": "warn",
        //在对象定义中禁止不必要的通过计算获得的属性字段
        "no-useless-computed-key": "warn",
        //禁用var，用let和const代替
        "no-var": "warn",
        //要求对象字面量简写语法
        "object-shorthand": [
            "warn",
            "always",
            {
                "avoidQuotes": true
            }
        ],
        //要求使用箭头函数作为回调
        "prefer-arrow-callback": [
            "warn",
            {
                "allowNamedFunctions": true
            }
        ],
        //建议使用扩展运算符而非.apply()
        "prefer-spread": "warn",
        //要求 generator 函数内有 yield
        "require-yield": "error",
        //*************  Stylistic Issues **************//
        //强制 typeof 表达式与有效的字符串进行比较
        "valid-typeof": "warn",
        //禁止空格和 tab 的混合缩进
        "no-mixed-spaces-and-tabs": "error",
        //禁止无效的this，只能用在构造器，类，对象字面量
        "no-invalid-this": "error",
        //禁止else语句内只有if语句
        "no-lonely-if": "error",
        //禁止无用的表达式
        "no-unused-expressions": "error",
        //要求构造函数首字母大写
        "new-cap": "warn",
        //强制将对象的属性放在不同的行上
        "object-property-newline": "warn",
        //禁止可以表达为更简单结构的三元操作符
        "no-unneeded-ternary": "warn",
        //使用表达式申明函数，可以使用箭头函数
        "func-style": [
            "warn",
            "expression",
            {
                "allowArrowFunctions": true
            }
        ],
        //要求使用尾逗号，和尾部']'或'}'在同一行时不使用尾逗号
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        //要求逗号放在数组元素、对象属性或变量声明之后，且在同一行
        "comma-style": [
            "warn",
            "last"
        ],
        //引用函数的变量名应与函数名一致
        "func-name-matching": "warn",
        //限制单行最大字符数
        "max-len": [
            "warn",
            150,
            {
                "ignoreStrings": true,
                "ignoreUrls": true,
                "ignoreTrailingComments": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ],
        //函数定义中参数数量不超过10个
        "max-params": [
            "warn",
            10
        ],
        //要求不同操作优先级的操作符混用时，应该使用括号
        "no-mixed-operators": [
            "warn",
            {
                "groups": [
                    [
                        "+",
                        "-",
                        "*",
                        "/",
                        "%",
                        "**"
                    ],
                    [
                        "&",
                        "|",
                        "^",
                        "~",
                        "<<",
                        ">>",
                        ">>>"
                    ],
                    [
                        "==",
                        "!=",
                        "===",
                        "!==",
                        ">",
                        ">=",
                        "<",
                        "<="
                    ],
                    [
                        "&&",
                        "||"
                    ],
                    [
                        "in",
                        "instanceof"
                    ]
                ],
                "allowSamePrecedence": true
            }
        ],
        //禁止使用块内填充
        "padded-blocks": [
            "warn",
            "never"
        ],
        //尽可能使用单引号，可以使用 ` 定义模板字符串
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        //强制定义最大空行数为2，文件末尾最大空行数为1
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2,
                "maxEOF": 1
            }
        ]
    }
}